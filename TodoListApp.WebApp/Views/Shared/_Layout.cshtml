<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoListApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoListApp.WebApp.styles.css" asp-append-version="true" />
    <style>
        .nav-link.active {
            color: cornflowerblue !important;
            font-weight: bold;
            font-size: 1em;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarTogglerDemo" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarToggler">
                    <a class="navbar-brand" asp-action="Index" asp-controller="TodoList">
                        <img src="/images/icon.png" alt="" width="35" height="35" class="d-inline-block align-text-top">
                    </a>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark
                            @(ViewContext.RouteData.Values["Controller"]!.ToString() == "TodoList"
                            && ViewContext.RouteData.Values["Action"]!.ToString() == "Index" ? "active" : "")"
                               asp-controller="TodoList" asp-action="Index"><i class="fa-solid fa-list-ul"></i> List of to-do lists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark
                            @(ViewContext.RouteData.Values["Controller"]!.ToString() == "AssignedTask"
                            && ViewContext.RouteData.Values["Action"]!.ToString() == "Index" ? "active" : "")"
                               asp-controller="AssignedTask" asp-action="Index"><i class="fa-solid fa-people-arrows"></i> Assigned tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark
                            @(ViewContext.RouteData.Values["Controller"]!.ToString() == "Tag"
                            && ViewContext.RouteData.Values["Action"]!.ToString() == "Index" ? "active" : "")
                            " asp-controller="Tag" asp-action="Index"><i class="fa-solid fa-tags"></i> All tags</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark
                            @(ViewContext.RouteData.Values["Controller"]!.ToString() == "Search"
                            && ViewContext.RouteData.Values["Action"]!.ToString() == "Index" ? "active" : "")"
                               asp-controller="Search" asp-action="Index"><i class="fa-solid fa-magnifying-glass-arrow-right"></i> Search for tasks</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <ul class="navbar-nav">
                            <li class="nav-item mt-2" style="margin-right: 25px;">
                                <i class="fa-regular fa-lg fa-circle-user"></i>
                                <span class="navbar-text text-black">@@@User.Identity!.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-danger nav-link text-dark" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <main role="main" class="pb-3">
            <div class="container mt-4">
                <div class="row justify-content-center">
                    <div class="col-md-8 mt-1 mx-auto">
                        <div class="col mt-2">
                            @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
