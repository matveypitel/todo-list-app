@using TodoListApp.Models.DTOs
@model TodoListModel

@{
    ViewData["Title"] = "Delete Todo List";
    var currentPage = ViewBag.CurrentPage;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">Delete Todo List</div>
                <div class="card-body">
                    <h5>Are you sure you want to delete this todo list?</h5>
                    <div class="mb-3 mt-3">
                        <strong>Title:</strong> @Model.Title
                    </div>
                    <div class="mb-3">
                        <strong>Description:</strong> @Model.Description
                    </div>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-secondary" asp-action="Index" asp-route-page="@currentPage">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>